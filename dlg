#!/bin/bash
# Description: personal wiki with auto-backup.
# Written by: Daniel Wayne Armstrong - https://www.circuidipity.com

set -eu

WIKI="$HOME/doc/wiki"

if [[ -n $(git -C "$WIKI" status --porcelain) ]]; then
    git -C "$WIKI" add --all && git -C "$WIKI" commit -m 'save'
fi
nvim -c VimwikiIndex
